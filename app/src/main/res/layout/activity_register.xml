<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e7e7e7"
    android:orientation="vertical" >

    <!-- toolbar-->
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        app:navigationIcon="@mipmap/icon_back"
        android:navigationIcon="@mipmap/icon_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="320dp"
        android:layout_marginTop="24dp"
        android:background="#fcfbfb"
        android:orientation="vertical" >

        <!-- 账号 -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="33dp"
            android:layout_marginRight="6dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:text="用户名"
                android:textColor="#303132"
                android:textSize="15dp" />

            <com.dhcc.yangmingci.view.ClearEditText
                android:hint="请使用电话注册"
                android:id="@+id/et_user"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="35dp"
                android:background="@null" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="33dp"
            android:layout_marginRight="6dp"
            android:background="#acacb1" >
        </View>

        <!-- 密码 -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="33dp"
            android:layout_marginRight="6dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:text="密码"
                android:textColor="#303132"
                android:textSize="15dp" />

            <com.dhcc.yangmingci.view.PasswordEditText
                android:password="true"
                android:id="@+id/et_pwd"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="50dp"
                android:background="@null"
                android:hint="请输入密码" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="33dp"
            android:layout_marginRight="6dp"
            android:background="#acacb1" >
        </View>

        <!-- 确认密码 -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="33dp"
            android:layout_marginRight="6dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:text="确认密码"
                android:textColor="#303132"
                android:textSize="15dp" />

            <com.dhcc.yangmingci.view.PasswordEditText
                android:password="true"
                android:id="@+id/et_repwd"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="20dp"
                android:background="@null" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="33dp"
            android:layout_marginRight="6dp"
            android:background="#acacb1" >
        </View>

        <!-- 联系电话 -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="33dp"
            android:layout_marginRight="6dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:text="联系电话"
                android:textColor="#303132"
                android:textSize="15dp" />

            <com.dhcc.yangmingci.view.ClearEditText
                android:id="@+id/et_phone"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="20dp"
                android:background="@null" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="33dp"
            android:layout_marginRight="6dp"
            android:background="#acacb1" >
        </View>

        <!-- 联系电话 -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="33dp"
            android:layout_marginRight="6dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:text="email"
                android:textColor="#303132"
                android:textSize="15dp" />

            <com.dhcc.yangmingci.view.ClearEditText
                android:id="@+id/et_email"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="44dp"
                android:background="@null" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="33dp"
            android:layout_marginRight="6dp"
            android:background="#acacb1" >
        </View>

        <!-- 用户类型 -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="33dp"
            android:layout_marginRight="6dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:text="文保单位"
                android:textColor="#303132"
                android:textSize="15dp" />

            <Spinner
                android:id="@+id/sp_org"
                android:layout_marginLeft="20dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="33dp"
            android:layout_marginRight="6dp"
            android:background="#acacb1" >
        </View>
    </LinearLayout>

    <Button
        android:id="@+id/register"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="28dp"
        style="?android:textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="注册"
        android:textStyle="bold" />


</LinearLayout>